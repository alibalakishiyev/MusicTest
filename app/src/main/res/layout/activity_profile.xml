<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pianino1"
    android:padding="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profilImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/male94"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.563"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.118"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/profilText"
            android:layout_width="124dp"
            android:layout_height="47dp"
            android:layout_marginTop="40dp"
            android:text="Melumatlar"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilImage" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toEndOf="@+id/atxtName"
            app:layout_constraintTop_toBottomOf="@+id/profilText" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/atxtEmail"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.075"
            app:layout_constraintStart_toEndOf="@+id/atxtPhone"
            app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="42dp"
            android:layout_height="49dp"
            android:layout_marginTop="280dp"
            android:background="@color/material_on_background_disabled"
            android:onClick="logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilImage"
            app:srcCompat="@drawable/logout48" />

        <ImageView
            android:id="@+id/atxtEmail"
            android:layout_width="34dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/email48"
            android:text="Email :"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atxtName" />

        <ImageView
            android:id="@+id/atxtName"
            android:layout_width="33dp"
            android:layout_height="31dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="128dp"
            android:src="@drawable/name48"
            android:text="Name :"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilImage" />

        <ImageView
            android:id="@+id/atxtPhone"
            android:layout_width="37dp"
            android:layout_height="31dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/phone48"
            android:text="Phone :"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atxtEmail" />

        <ImageButton
            android:id="@+id/verfyEmailBtn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="4dp"
            android:background="@color/material_on_background_disabled"
            app:layout_constraintEnd_toStartOf="@+id/checkMarkImage"
            app:layout_constraintTop_toTopOf="@+id/profilText"
            app:srcCompat="@drawable/refreshmail32" />

        <ImageView
            android:id="@+id/checkMarkImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Testiq işarəsi"
            android:src="@drawable/redreceived24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtEmail"
            app:layout_constraintTop_toTopOf="@+id/profilText" />

        <ImageButton
            android:id="@+id/resetPas"
            android:layout_width="39dp"
            android:layout_height="33dp"
            android:layout_marginTop="248dp"
            android:background="@color/material_on_background_disabled"
            android:src="@drawable/resetpass32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilImage" />

        <ImageButton
            android:id="@+id/changeProfile"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:layout_marginTop="12dp"
            android:background="@color/material_on_background_disabled"
            android:src="@drawable/editprofile48"
            android:text="Change Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoutBtn" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="43dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:background="@color/material_on_background_disabled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/changeProfile"
            app:srcCompat="@drawable/back48" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>